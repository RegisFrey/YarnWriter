{
  "name": "yarn-writer",
  "author": "Regis Frey <RegisFrey@Darkfirestudios.com>",
  "description": "An alternative yarn story editor built on modern, clean, well documented code and a cleaner design system. Using monaco instead of ace, electron instead of nw.js, and vue instead of knockout.",
  "license": "MIT",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "## WEB": "",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "## ELECTRON": "",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "## STYLEGUIDE": "",
    "styleguide": "vue-cli-service styleguidist",
    "styleguide:build": "vue-cli-service styleguidist:build",
    "## TOKENS": "",
    "tokens": "theo ./src/tokens/defaults/defaults.yml --transform web --format custom-properties.css,module.js --dest ./src/tokens/generated"
  },
  "dependencies": {
    "@johmun/vue-tags-input": "^2.1.0",
    "color-string": "^1.5.3",
    "core-js": "3",
    "dayjs": "^1.8.23",
    "direct-vuex": "^0.10.4",
    "monaco-editor": "^0.20.0",
    "monaco-editor-textmate": "^2.2.1",
    "monaco-editor-webpack-plugin": "^1.9.0",
    "monaco-textmate": "^3.0.1",
    "node-sass": "^4.13.1",
    "onigasm": "^2.2.4",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "theo": "^8.1.5",
    "vue": "^2.6.11",
    "vue-material-design-icons": "^4.4.0",
    "vue-resize-directive": "^1.2.0",
    "vue-router": "^3.1.5",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@vue/cli-plugin-eslint": "^4.2.0",
    "@vue/cli-plugin-typescript": "^4.2.0",
    "@vue/cli-service": "^4.2.0",
    "@vue/eslint-config-standard": "^5.1.0",
    "@vue/eslint-config-typescript": "^5.0.1",
    "electron": "^6.0.0",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^6.1.2",
    "typescript": "~3.7.5",
    "vue-cli-plugin-electron-builder": "^1.4.6",
    "vue-cli-plugin-styleguidist": "^4.15.2",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "main": "background.js"
}
